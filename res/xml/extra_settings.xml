<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/extra_settings_title" >

        <!-- Gestures -->
        <Preference
            android:key="gestures_category"
            android:title="@string/gestures_title" 
            android:fragment="com.extra.settings.fragments.GestureSettings"
            android:icon="@drawable/ic_settings_gestures"/>

        <!-- Lock Screen -->
        <Preference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.extra.settings.fragments.LockScreenSettings"
            android:icon="@drawable/ic_settings_lockscreens"/>

        <!-- Status Bar -->
        <Preference
            android:key="statusbar_category"
            android:title="@string/statusbar_title" 
            android:fragment="com.extra.settings.fragments.StatusBarSettings"
            android:icon="@drawable/ic_settings_statusbar"/>
           
        <!-- Button Settings -->
	<Preference
	    android:key="button_category"
	    android:title="@string/button_title"
	    android:fragment="com.extra.settings.fragments.ButtonSettings"
	    androidmicon="@drawable/ic_settings_buttons"/>

    <!-- Themer -->
	<Preference
	    android:key="button_category"
	    android:title="@string/themer_title"
	    android:fragment="com.ssos.shapeshifter.fragments.ui.Themer"
	    androidmicon="@drawable/ic_themer_image"/>

</PreferenceScreen>
